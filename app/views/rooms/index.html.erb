<div>
	<table border="1">
		<caption>部屋名一覧</caption>
		<thead>
			<tr>
				<th>部屋名</th>
			</tr>
		</thead>
		<tbody>
			<% @rooms.each do |room| %>
				<tr>
					<td><%= link_to room.name, room_comment_path(room.id) %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>


<h1>投稿フォーム</h1>

<%= form_for(Room.new) do |f| %>
  <div class="field">
    <%= f.label :name, '部屋名'%><br>
    <%= f.text_field :name %>
  </div>
  <div class="actions">
    <%= f.submit '部屋作成'%>
  </div>
<% end %>

